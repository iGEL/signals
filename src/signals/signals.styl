circle
  stroke-width: 0.4
  stroke-opacity: 0.85
  stroke: #333

.green
  fill:url(#green-gradient)
.green.on
  filter: drop-shadow(0 0 5px #00bd4a)
.red
  fill:url(#red-gradient)
.red.on
  filter: drop-shadow(0 0 5px #da012a)
.orange
  fill:url(#orange-gradient)
.orange.on
  filter: drop-shadow(0 0 5px #fc8e00)
.yellow
  fill:url(#yellow-gradient)
.yellow.on
  filter: drop-shadow(0 0 5px #fac412)
.white
  fill:url(#white-gradient)
.white.on
  filter: drop-shadow(0 0 5px #ebe6d8)
circle.on
  fill-opacity: 1
  transition: fill-opacity .05s ease-in
  transition-delay: .1s
circle.off
  fill-opacity: 0
  transition: fill-opacity .2s ease-out

@keyframes blinking
    0% { fill-opacity: 1 }
    37.5% { fill-opacity: 1 }
    40% { fill-opacity: 0 }
    90% { fill-opacity: 0 }
    100% { fill-opacity: 1 }

circle.on.blinking
  animation: blinking 2s ease infinite
.hlSignal circle.on.blinking
  animation: blinking 1s ease infinite
